{
	"extends": "@vue/tsconfig/tsconfig.json",
	"compilerOptions": {
		"sourceMap": true,
		"baseUrl": "./",
		"moduleResolution": "Node",
		"lib": ["esnext", "dom"],
		"types": ["@dcloudio/types", "uview-plus/types", "@types/uni-app"],
		"paths": {
			"@src/*": ["src/*"],
			"@pages/*": ["src/pages/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/inde", "src/utils/*"],
			"@apis/*": ["src/apis/*"],
			"@plugins/*": ["src/plugins/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
